{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"!src/api/**",
			"!**/dist",
			"!**/out",
			"!**/*.lock"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useButtonType": "warn",
				"noSvgWithoutTitle": "off",
				"noLabelWithoutControl": "warn",
				"noStaticElementInteractions": "warn",
				"useKeyWithClickEvents": "warn",
				"noAutofocus": "off",
				"useAriaPropsSupportedByRole": "warn",
				"noRedundantAlt": "warn",
				"useIframeTitle": "warn",
				"useValidAnchor": "warn",
				"useSemanticElements": "warn"
			},
			"complexity": {
				"noUselessCatch": "error",
				"noUselessTypeConstraint": "error"
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnusedImports": "warn",
				"noUnusedFunctionParameters": "warn",
				"useExhaustiveDependencies": "warn",
				"useHookAtTopLevel": "error",
				"useJsxKeyInIterable": "error",
				"noInvalidUseBeforeDeclaration": "warn"
			},
			"security": {
				"noDangerouslySetInnerHtmlWithChildren": "error"
			},
			"style": {
				"noNonNullAssertion": "warn",
				"useConst": "warn",
				"useImportType": "warn",
				"noCommonJs": "error",
				"noNamespace": "error",
				"useAsConstAssertion": "error"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noArrayIndexKey": "warn",
				"noAssignInExpressions": "warn",
				"noImplicitAnyLet": "warn",
				"noExtraNonNullAssertion": "error",
				"noMisleadingInstantiator": "error",
				"noNonNullAssertedOptionalChain": "error",
				"noUnsafeDeclarationMerging": "error",
				"noCommentText": "error",
				"noDuplicateJsxProps": "error",
				"noDocumentCookie": "warn",
				"useIterableCallbackReturn": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"trailingCommas": "es5",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true
		},
		"globals": [
			"localStorage",
			"window",
			"document",
			"navigator",
			"fetch",
			"AbortController",
			"setTimeout",
			"clearTimeout",
			"setInterval",
			"clearInterval",
			"console",
			"URL",
			"URLSearchParams",
			"Headers",
			"Request",
			"Response",
			"FormData",
			"Blob",
			"File",
			"FileReader",
			"CustomEvent",
			"EventSource",
			"TextEncoder",
			"TextDecoder",
			"ReadableStream",
			"WritableStream",
			"TransformStream",
			"performance",
			"requestAnimationFrame",
			"cancelAnimationFrame",
			"ResizeObserver",
			"IntersectionObserver",
			"MutationObserver",
			"MediaRecorder",
			"AudioContext",
			"AnalyserNode",
			"HTMLElement",
			"HTMLInputElement",
			"HTMLTextAreaElement",
			"HTMLDivElement",
			"HTMLButtonElement",
			"HTMLFormElement",
			"Element",
			"Node",
			"NodeList",
			"Event",
			"KeyboardEvent",
			"MouseEvent",
			"FocusEvent",
			"ClipboardEvent",
			"DragEvent",
			"PointerEvent",
			"Touch",
			"TouchEvent",
			"SVGSVGElement",
			"DOMParser",
			"XMLSerializer",
			"crypto",
			"structuredClone",
			"queueMicrotask",
			"btoa",
			"atob",
			"alert",
			"confirm",
			"prompt",
			"open",
			"close",
			"history",
			"location",
			"WebSocket",
			"Worker",
			"SharedWorker",
			"MessageChannel",
			"MessagePort",
			"BroadcastChannel",
			"Notification",
			"AudioBuffer",
			"Float32Array",
			"Map",
			"Set",
			"WeakMap",
			"WeakSet",
			"Symbol",
			"BigInt",
			"Proxy",
			"Reflect",
			"Promise",
			"JSON",
			"Math",
			"Date",
			"RegExp",
			"Error",
			"TypeError",
			"RangeError",
			"Intl",
			"ArrayBuffer",
			"DataView",
			"Uint8Array",
			"Int32Array",
			"Image",
			"self",
			"globalThis",
			"__dirname",
			"process",
			"module",
			"require",
			"Buffer"
		]
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
