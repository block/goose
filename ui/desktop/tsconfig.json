{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["jest", "node"],
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

